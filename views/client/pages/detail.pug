extends ../layouts/default.pug
block main
    header
      .logo
        a(href='/')
          img(src='/images/logo-removebg.png', alt='Logo')
      .form
        form(action='/search' method='get')
          input(type='text' name='query' placeholder='Nhập tên sách')
          button(type='submit') 
            i(class='fa-solid fa-search') 
      .categories
        a(href='#') 
          i(class="fa-solid fa-list-ul")
          span Thể loại
        ul.sub-menu
          li: a(href='/categories/toan-hoc') Toán học
          li: a(href='/categories/van-hoc') Văn học
          li: a(href='/categories/khoa-hoc') Khoa học
          li: a(href='/categories/lich-su') Lịch sử
      .bookshelf
        a(href='/bookshelf') 
          i(class="fa-solid fa-book-open")
          span Tủ sách cá nhân
    main
      .book-detail
        .book-img
          img(src=`/images/${book.image}` alt=book.title)
        .book-info
          .title 
            h3= book.title
          .author 
            span Tác giả: 
            a(href=`/authors/${book.author}`) #{book.author}
          .category 
            span Thể loại: 
            a(href=`/categories/${book.category}`) #{book.category}
          .description
            span Mô tả: #{book.description}
          .actions
            button(id="readBtn" type='button' bookId=book.id) Đọc sách
      .book-chapters
        h4 Danh sách chương:
        ul
          each chapter in book.chapters
            li
              a(href=`/books/${book.id}?page=${chapter.page}`) #{chapter.title}

