extends ../layouts/default.pug
block main
    include ../partials/header.pug
    main
      include ../partials/left-sidebar.pug
      .content
        .button-add
          a(href='/admin/books/add') Thêm danh mục mới
        .list-categories
          h2 Danh sách danh mục
          table
            colgroup
              col(style="width: 40%")
              col(style="width: 40%")
              col(style="width: 20%")
            thead
              tr
                th Tên
                th Miêu tả
                th Hành động
            tbody
              each category in categories
                tr
                  td= category.name
                  td= category.description
                  td
                    .actions
                      .button-actions
                        a(href=`/admin/categories/edit/${category._id}`) Sửa
                      .button-actions
                        a(href=`/admin/categories/delete/${category._id}`) Xóa
          .paginations
            ul
              each p in pageNumbers
                if(p === "...")
                  li.pagi
                    span.dots ...
                else
                  li.pagi
                    a(href=`/admin/categories?page=${p}`)= p
